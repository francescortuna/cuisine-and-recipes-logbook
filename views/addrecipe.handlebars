<div class="row justify-content-center">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <p>
        <h3>Add your favorite recipe</h3>
        <form class="form add-recipe-form">
          <div class="form-group">
            <label for="cuisine-name">Cuisine</label>
            <select id="cuisine-name" name="cuisine-name">
              <option value="1">Mexican</option>
              <option value="2">Italian</option>
              <option value="3">Chinese</option>
            </select>
          </div>
          <div class="form-group">
            <label for="recipe-name">Recipe name</label>
            <input type="text" id="recipe-name" class="form-input" name="recipe-name" data-id="{{user_id}}">
          </div>
          <div class="form-group">
            <label for="recipe-ingredients">Ingredients</label>
            <textarea id="recipe-ingredients" class="form-textarea" name="recipe-ingredients"></textarea>
          </div>
          <div class="form-group">
            <label for="recipe-time">Recipe time</label>
            <input type="text" id="recipe-time" class="form-input" name="recipe-time">
          </div>
          <div class="form-group">
            <label for="recipe-instructions">Instructions</label>
            <textarea id="recipe-instructions" class="form-textarea" name="recipe-instructions"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Add Recipe</button>
        </form>
        </p>
      </div>
    </div>
  </div>
</div>

<script src="/js/addRecipe.js"></script>